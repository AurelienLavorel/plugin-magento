            <payzen_sofort>
                <model>payzen/payment_sofort</model>
                <group>payzen</group>

                <active>0</active>
                <allowspecific>0</allowspecific>
                <title>Paiement Sofort Banking</title>
                <sort_order>7</sort_order>
                <module_logo>sofort_banking.png</module_logo>
                <payment_action>authorize</payment_action>
            </payzen_sofort>

            

            

            <payzen_ideal>
                <model>payzen/payment_ideal</model>
                <group>payzen</group>

                <active>0</active>
                <allowspecific>1</allowspecific>
                <specificcountry>NL</specificcountry>
                <title>Paiement iDEAL</title>
                <sort_order>10</sort_order>
                <module_logo>ideal.png</module_logo>
                <payment_action>authorize</payment_action>
            </payzen_ideal>
        </payment>
    </default>
</config>